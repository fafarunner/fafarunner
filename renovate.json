{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "prHourlyLimit": 0,
  "ignoreDeps": [
    "flutter_localizations",
    "flutter_web_plugins",
    "flutter_test",
    "node"
  ],
  "packageRules": [
    {
      "allowedVersions": "18",
      "matchPackageNames": ["@types/node"]
    },
    {
      "allowedVersions": "18",
      "matchPackageNames": ["@commitlint/cli", "@commitlint/config-conventional"]
    },
    {
      "allowedVersions": "2",
      "matchPackageNames": ["tsparticles"]
    },
    {
      "matchPackageNames": ["flutter", "dart"],
      "groupName": "flutter"
    }
  ]
}
